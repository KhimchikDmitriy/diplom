<div
  class="modal fade"
  id="createPost"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-xg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Создать пост</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form
          action="/upload/post"
          class="container"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="row my-3">
            <div class="col-sm-6 col-12">
              <div class="form-floating">
                <textarea
                  class="form-control"
                  name="body"
                  id="body"
                  placeholder="Content"
                ></textarea>
                <label for="body">Введите содержание поста</label>
              </div>
            </div>
          </div>
          <div class="row my-3">
            <div class="col-sm-6 col-12">
              <div class="form-floating">
                <div class="mb-3">
                  <input
                    class="form-control"
                    type="file"
                    id="media"
                    name="media"
                  />
                </div>
              </div>
            </div>
          </div>
          <div class="row my-3">
            <div class="col-sm-6 col-12">
              <button type="submit" class="btn btn-success">Запостить</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
