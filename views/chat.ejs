<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body style="height: 100vh">
    <%- include('./partials/header'); -%>
    <br />
<br />
<% if (role === "admin") { %>
  <form action="/table" method="post">
    <select name="select">
	<option value=" "> </option>
      <% entries.chat.forEach(function(entry) { %>
      <option value="<%= entry.name %>"><%= entry.name %></option>
      <% }) %>
    </select>
    <input class="btn btn-light" type="submit" value="Выберите получателя" />
  </form>
  <% } %>
  <div style="min-height: 45vh;">
<% entries.posts.forEach(function(entry) { %>
  <% if (entry.whom === user.name || entry.whom === user.name.familyName + " " + user.name.givenName || role === "admin" && entry.whom === select) { %>
    <% if (entry.title === "message") { %>
      <div class="message message<%= entry.id %>" >
        <p class="delete-link">
          <a href="posts/delete/<%= entry.id %>"><i class="fa-solid fa-trash-can"></i></a>
        </p>
        <p class="message-body" ><p> </p><%= entry.author %>: <br> <%= entry.body %></p>
        <% if (entry.media) { %>
          <img src="../uploads/<%= entry.media %>" class="message-image" />
          <a href="../uploads/<%= entry.media %>" download>Скачать файл</a>
          <% } %>
        </div>
        <% if (user.name === entry.author || user.name.familyName + " " + user.name.givenName ===entry.author ) { %>
          <style>
            .message<%= entry.id %>{
              padding-left: 10px;
              width: 500px;
              margin-left: 50%;
              }
          </style>
          <% } else { %>
            <style>
              .message<%= entry.id %>{
              padding-left: 10px;
              width: 500px;
              margin-left: 15%;
            }
            </style>
        <% } %>
        <% } %>
        <% } %>
        <% }); %>
      </div>
    <form action="/upload/message" method="post" enctype="multipart/form-data" class="messGo">
        <input type="text" name="body" id="body" placeholder="Введите сообщение..." />
        <button type="submit">Отправить</button>
        <div class="mb-3">
          <input
            class="form-control"
            type="file"
            id="media"
            name="media"
          />
        </div>
    </form>
    <br>
    <br>

    <%- include('./partials/footer'); -%>
    <%-include('./partials/feedback'); -%>
</body>
<style>
  body {
    background: url(./img/pattern_3.png);
  }
</style>
</html>
